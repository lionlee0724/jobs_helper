{
  "name": "jobs-helper-boss",
  "version": "3.0.3",
  "description": "Universal Job Helper - Automated job application assistant for Boss Zhipin and Liepin",
  "main": "Universal_Job_Helper.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=\"^(?!.*e2e).*\\.test\\.js$\"",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e --testTimeout=60000",
    "test:e2e:headed": "HEADLESS=false jest --testPathPattern=e2e --testTimeout=60000",
    "test:browser": "node scripts/run-browser-test.js",
    "test:verify": "node scripts/verify-e2e.js",
    "lint": "eslint *.js",
    "build": "echo 'No build step required for UserScript'",
    "prepare": "husky install",
    "dev": "npm run test:watch"
  },
  "keywords": [
    "userscript",
    "job-search",
    "automation",
    "boss-zhipin",
    "liepin",
    "recruitment"
  ],
  "author": "Yangshengzhou / Refactored by Assistant",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/yangshengzhou03/Jobs_helper-Boss.git"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "eslint": "^8.50.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "puppeteer": "^21.0.0",
    "playwright": "^1.40.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!*.config.js",
      "!scripts/**",
      "!test/e2e/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/test/e2e/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}